<?xml version="1.0" encoding="UTF-8"?>

<skin>
  <ui>
    <panel layout="border">
      <idv.menubar place="North"/>
      <panel
         place="Center"
         layout="border">
        <idv.view place="Center" class="${view_class}" properties="use3D=false;"/>
      </panel>
    </panel>
  </ui>
  <styles>
    <style
       class="iconbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip);ui.setBorder(this,etched);"
       mouse_exit="ui.setText(idv.messagelabel,);ui.setBorder(this,button);"/>
    <style
       class="textbtn"
       space="2"
       mouse_enter="ui.setText(idv.messagelabel,prop:tooltip)"
       mouse_exit="ui.setText(idv.messagelabel,)"/>
  </styles>
  <components/>
  <properties>
    <property
       name="icon.wait.wait"
       value="/ucar/unidata/idv/images/wait.gif"/>
    <property
       name="mcidasv.tab.title"
       value="2D Display"/>
  </properties>
</skin>
